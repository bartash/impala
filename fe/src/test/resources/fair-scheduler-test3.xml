<?xml version="1.0"?>
<allocations>
  <queue name="root">
    <!--
    A user that is not matched by any other rule can run 10 queries across the cluster
    -->
    <userQueryLimit>* 10</userQueryLimit>

    <!--
    Members of the 'support' group are limited to run 6 queries across the cluster
    -->
    <groupQueryLimit>support 6</groupQueryLimit>

    <!--
    User 'howard' is limited to running 4 queries across the cluster
    -->
    <userQueryLimit>howard 4</userQueryLimit>

    <queue name="group-set-small">
      <!--
      A user that is mot matched by any other rule can run only 1 query in the small group
      -->
      <userQueryLimit>* 1</userQueryLimit>

      <!--
      -->
      <groupQueryLimit>dev,support 3</groupQueryLimit>

      <!--
      -->
      <groupQueryLimit>it 2</groupQueryLimit>


      <!--
      -->
      <userQueryLimit>alice 4</userQueryLimit>
    </queue>

    <queue name="group-set-large">
      <!--
      -->
      <userQueryLimit>* 1</userQueryLimit>

      <!--
      -->
      <groupQueryLimit>dev 2</groupQueryLimit>

      <!--
      -->
      <groupQueryLimit>support 1</groupQueryLimit>

      <!--
      -->
      <userQueryLimit>claire 3</userQueryLimit>

      <!--
      -->
      <userQueryLimit>alice 4</userQueryLimit>
    </queue>
  </queue>
</allocations>
